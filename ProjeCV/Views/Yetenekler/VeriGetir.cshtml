@model ProjeCV.Models.Entity.TBL_SKILLS
@{
    ViewBag.Title = "VeriGetir";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Guncelle", "Yetenekler", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.ID, new { @style = "display:none;" })
        @Html.TextBoxFor(m => m.ID, new { @style = "display:none;" })
        <br />
        @Html.LabelFor(m => m.SKILL)
        @Html.TextBoxFor(m => m.SKILL, new { @class = "form-control" })

        <br />
        <br />

        <button class="btn btn-success">Yeteneklerimi Güncelle</button>
    </div>
}

