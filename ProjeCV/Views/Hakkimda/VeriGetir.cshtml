@model ProjeCV.Models.Entity.TBL_ABOUT
@{
    ViewBag.Title = "VeriGetir";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Guncelle", "Hakkimda", FormMethod.Post))
{
<div class="form-group">
    @Html.LabelFor(m => m.ID, new { @style = "display:none;" })
    @Html.TextBoxFor(m => m.ID, new { @style = "display:none;" })
    <br />
    @Html.LabelFor(m => m.NAME)
    @Html.TextBoxFor(m => m.NAME, new { @class = "form-control" })
    <br />
    @Html.LabelFor(m => m.SURNAME)
    @Html.TextBoxFor(m => m.SURNAME, new { @class = "form-control" })
    <br />
    @Html.LabelFor(m => m.PHONE)
    @Html.TextBoxFor(m => m.PHONE, new { @class = "form-control" })
    <br />
    @Html.LabelFor(m => m.MAIL)
    @Html.TextBoxFor(m => m.MAIL, new { @class = "form-control" })
    <br />
    @Html.LabelFor(m => m.ADDRESS)
    @Html.TextBoxFor(m => m.ADDRESS, new { @class = "form-control" })
    <br />
    @Html.LabelFor(m => m.ABOUT)
    @Html.TextAreaFor(m => m.ABOUT, new { @class = "form-control" })

    <br />
    <br />

    <button class="btn btn-success">Hakkımda Güncelle</button>
</div>
}
