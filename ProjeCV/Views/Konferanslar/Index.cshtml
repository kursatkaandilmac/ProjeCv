@using ProjeCV.Models.Entity
@model List<TBL_AWARDS>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Index", "Konferanslar", FormMethod.Get))
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    <p align="center">
                        Aranacak Değer :  @Html.TextBox("p")
                        <input class="btn btn-warning" type="submit" value="Ara" />
                    </p>
                </th>
            </tr>
        </thead>
    </table>

}

<table class="table table-bordered">
    <thead>
        <tr align="center">
            <th style="display:none">ID</th>
            <th>Konferanslarım</th>
            <th><p align="center">Sil</p></th>
            <th><p align="center">Güncelle</p></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var x in Model)
        {
            <tr>
                <th style="display:none">@x.ID</th>
                <td>@x.AWARD</td>
                <td align="center">@Html.ActionLink("Sil", "KonferansSil", new { id = x.ID }, new { @class = "btn btn-danger", onclick = "return confirm(' Bu Konferansını Silmek İstiyor Musun?')" })</td>
                <td align="center"><a href="/Konferanslar/VeriGetir/@x.ID" class="btn btn-success">Güncelle</a></td>
            </tr>
        }

    </tbody>

</table>

<a href="/Konferanslar/YeniKonferans/" class="btn btn-info">Yeni Konferans Ekle</a>
