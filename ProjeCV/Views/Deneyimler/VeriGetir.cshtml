@model ProjeCV.Models.Entity.TBL_EXPERIENCE
@{
    ViewBag.Title = "VeriGetir";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Guncelle", "Deneyimler", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.ID, new { @style = "display:none;" })
        @Html.TextBoxFor(m => m.ID, new { @style = "display:none;" })
        <br />
        @Html.LabelFor(m => m.TITLE)
        @Html.TextBoxFor(m => m.TITLE, new { @class = "form-control" })
        <br />
        @Html.LabelFor(m => m.SUBTITLE)
        @Html.TextBoxFor(m => m.SUBTITLE, new { @class = "form-control" })
        <br />
        @Html.LabelFor(m => m.DATE)
        @Html.TextBoxFor(m => m.DATE, new { @class = "form-control" })
        <br />
        @Html.LabelFor(m => m.DETAILS)
        @Html.TextAreaFor(m => m.DETAILS, new { @class = "form-control" })
        

        <br />
        <br />

        <button class="btn btn-success">Deneyimleri Güncelle</button>
    </div>
}

