@model ProjeCV.Models.Sinif.Class1
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th style="display:none">ID</th>
            <th>BAŞLIK</th>
            <th>ALT BAŞLIK</th>
            <th>BÖLÜM</th>
            <th>GNO</th>
            <th>Sil</th>
            <th>Güncelle</th>


        </tr>
    </thead>
    <tbody>

        @foreach (var x in Model.Deger3)
        {
        <tr>
            <th style="display:none">@x.ID</th>
            <td>@x.TITLE</td>
            <td>@x.SUBTITLE</td>
            <td>@x.DEPARTMENT</td>
            <td>@x.GPA</td>
            <td>@Html.ActionLink("Sil", "EgitimSil", new { id = x.ID }, new { @class = "btn btn-danger", onclick = "return confirm(' Bu Eğitim Bilgini Silmek İstiyor Musun?')" })</td>
            <td><a href="/Egitim/VeriGetir/@x.ID" class="btn btn-success">Güncelle</a></td>

        </tr>
        }

    </tbody>

</table>

<a href="/Egitim/YeniEgitim/" class="btn btn-info">Yeni Eğitim Ekle</a>

